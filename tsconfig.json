{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es6",
        "noImplicitAny": false,
        "sourceMap": true,
        "outDir": "dist",
        "lib": [
            "es5",
            "es6",
            "dom",
            "esnext.asynciterable"
        ],
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "views",
        "static",
        "node_modules"
    ],
    "baseUrl": "types",
    "typeRoots": [
        "types"
    ]
}